<script>
  <% if session[:what] == "users" %>
    $("#topbar-text").html("Users");
  <% else %>
    $("#topbar-text").html("All Jobs");
  <% end %>
</script>

<%= link_to 'RefreshIndex', {:controller => "jobs", :action => 'manage', :which => session[:which], :what => session[:what], :id => "refreshIndex", :previous_jobs => @jobs.map {|e| e.status}.to_a}, :remote => true, id: "refreshIndex", class: "hidden" %>

<div id="jobs-index">
  <% if session[:what] == "users" %>
    <%= render partial: '/admins/users' %>
  <% else %>
    <%= render partial: '/jobs/jobs' %>
  <% end %>
</div>

