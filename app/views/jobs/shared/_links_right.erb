<%- if user_signed_in? %>
  <% if current_user.role == "admin" && controller_name == 'jobs' && !defined?(nomanage) %>
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Manage<span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to 'My jobs', {:controller => "jobs", :action => 'manage', :which => 'mine', :what => 'jobs', :id => "myJobs"}, :remote => true %>
      </li>
      <li>
        <%= link_to 'delayed-jobs', "/delayed-jobs", target: "_blank" %>
      </li>
      <li>
        <%= link_to 'All jobs', {:controller => "jobs", :action => 'manage', :which => 'all', :what => 'jobs', :id => "allJobs"}, :remote => true %>
      </li>
      <li>
        <%= link_to 'Users', {:controller => "jobs", :action => 'manage', :which => 'all', :what => 'users', :id => "allUsers"}, :remote => true %>
      </li>
    </ul>
  </li>
  <% end %>

  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-user-o" aria-hidden="true"></i>
      <%= current_user.username %>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li title="Edit account details">
        <%= link_to edit_user_registration_path  do %>
        Account
        <% end %>
      </li>
      <li title="Infos">
        <%= link_to 'Infos', "/infos/infos", target: "_self" %>
      </li>
      <li title="Terms of service">
        <%= link_to 'Terms', "/infos/terms", target: "_self" %>
      </li>
      <li title="Software version">
        <%= link_to 'Version', "/infos/version", target: "_self" %>
      </li>
      <li title="Project git repository">
        <a href="https://c4science.ch/diffusion/1570/genocrunch.git" target="_blank">
          <i class="fa fa-git-square" aria-hidden="true"></i> Project
        </a>
      </li>
    </ul>
  </li>
<%- end %>
