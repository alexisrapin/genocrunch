<%= render :partial => 'standard_fig_layout' %>

<%= javascript_tag do %>

  $("#view-title").html("perMANOVA")

<% if @data_json %>
  var fig_data = <%= raw @data_json %>;

  adonisPieChart('fig', 'fig-legend', fig_data,  W = 600, H = 600, font_family = "verdana, arial, helvetica, sans-serif");

<% else %>
  var status = '<%= (@final_json)? @final_json[:global_status_by_step]['adonis'] : 'pending' %>';
  if (['pending', 'running'].indexOf(status) == -1) {
    noDataError('#fig-container', '#fig')
  } else {
    noDataYet('#fig-container', '#fig')
  }
<% end %>

<% end %>
